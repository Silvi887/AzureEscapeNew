@{

    ViewData["Title"] = "Add Reservation";
    var today = DateTime.Now.ToString("dd-MM-yyyy");
}



@using AzureApp.ViewModels

@model AddReservationViewModel



<h2 class="mb-4">Add a New Reservation</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Add" method="post">
            <div class="row g-3">

                <div class="col-md-6 form-floating">
                    <input asp-for="@Model.VilaName" class="form-control" placeholder="Name Vila" />
                    <label asp-for="@Model.VilaName"></label>
                    <span asp-validation-for="@Model.VilaName" class="text-danger"></span>
                    <input asp-for="@Model.VillaId" type="hidden" aria-required="true" />
                </div>
                <div class="col-md-6 form-floating">
                    <input asp-for="@Model.StartDate" class="form-control" type="date" placeholder="Start Date" />
                    <label asp-for="@Model.StartDate"></label>
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-floating">
                    <input asp-for="@Model.EndDate" class="form-control" type="date" placeholder="End Date" />
                    <label asp-for="@Model.EndDate"></label>
                    <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-floating">
                    <input asp-for="@Model.AdultsCount" class="form-control" placeholder="Adults Count" />
                    <label asp-for="@Model.AdultsCount"></label>
                    <span asp-validation-for="@Model.AdultsCount" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-floating">
                    <input asp-for="@Model.ChildrenCount" class="form-control" placeholder="Children Count" />
                    <label asp-for="@Model.ChildrenCount"></label>
                    <span asp-validation-for="@Model.ChildrenCount" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-floating">
                    <input asp-for="@Model.GuestFirstName" class="form-control" placeholder="First Name" />
                    <label asp-for="@Model.GuestFirstName"></label>
                    <span asp-validation-for="@Model.GuestFirstName" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-floating">
                    <input asp-for="@Model.LastNameG" class="form-control" placeholder="Last Name" />
                    <label asp-for="@Model.LastNameG"></label>
                    <span asp-validation-for="@Model.LastNameG" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-floating">
                    <input asp-for="@Model.DateofBirth" class="form-control" type="date" placeholder="Date of Birth" />
                    <label asp-for="@Model.DateofBirth"></label>
                    <span asp-validation-for="@Model.DateofBirth" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-floating">
                    <input asp-for="@Model.GuestAddress" class="form-control" placeholder="Address" />
                    <label asp-for="@Model.GuestAddress"></label>
                    <span asp-validation-for="@Model.GuestAddress" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-floating">
                    <input asp-for="@Model.GuestPhoneNumber" class="form-control" placeholder="Phone Number" />
                    <label asp-for="@Model.GuestPhoneNumber"></label>
                    <span asp-validation-for="@Model.GuestPhoneNumber" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-floating">
                    <input asp-for="@Model.GuestEmail" class="form-control" placeholder="Email" />
                    <label asp-for="@Model.GuestEmail"></label>
                    <span asp-validation-for="@Model.GuestEmail" class="text-danger"></span>
                </div>

               @*  <div class="col-md-6 form-floating">
                    <input asp-for="@Model.VillaId" class="form-control"  placeholder="Villa ID" />
                    <label asp-for="@Model.VillaId"></label>
                    <span asp-validation-for="@Model.VillaId" class="text-danger"></span>
                </div> *@

                <div class="col-md-6 form-floating">
                    <input asp-for="VilaName" class="form-control" placeholder="Villa Name" />
                    <label asp-for="VilaName"></label>
                    <span asp-validation-for="@Model.VilaName" class="text-danger"></span>
                </div>

             @*    <div class="col-md-6 form-check mt-4">
                    <input asp-for="@Model.IsGuest" class="form-check-input" />
                    <label asp-for="@Model.IsGuest" class="form-check-label"></label>
                </div> *@

            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">Submit Reservation</button>
                <a asp-controller="Vila" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </div>
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success">
                    @ViewBag.SuccessMessage
                </div>
            }
        </form>
    </div>
</div>
