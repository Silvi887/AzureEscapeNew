@{
}


@{
    ViewData["Title"] = "Edit Booking";
}

@using AzureApp.ViewModels

@model EditBooking


<h2 class="mb-4">Edit Booking</h2>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}
<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="IdBooking" class="form-label"></label>
            <input asp-for="IdBooking" class="form-control" readonly />
        </div>

        <div class="col-md-6">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" type="date" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="AdultsCount" class="form-label"></label>
            <input asp-for="AdultsCount" type="number" class="form-control" min="0" />
        </div>

        <div class="col-md-6">
            <label asp-for="ChildrenCount" class="form-label"></label>
            <input asp-for="ChildrenCount" type="number" class="form-control" min="0" />
        </div>

        <div class="col-md-6">
            <label asp-for="GuestFirstName" class="form-label"></label>
            <input asp-for="GuestFirstName" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="LastNameG" class="form-label"></label>
            <input asp-for="LastNameG" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="DateofBirth" class="form-label"></label>
            <input asp-for="DateofBirth" type="date" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="GuestAddress" class="form-label"></label>
            <input asp-for="GuestAddress" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="GuestPhoneNumber" class="form-label"></label>
            <input asp-for="GuestPhoneNumber" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="GuestEmail" class="form-label"></label>
            <input asp-for="GuestEmail" type="email" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="VilaId" class="form-label"></label>
            <input asp-for="VilaId" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="VilaName" class="form-label"></label>
            <input asp-for="VilaName" class="form-control" />
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="AllReservations" class="btn btn-secondary ms-2">Cancel</a>
    </div>
   
</form>